<style>
    body {
        font-family: 'Satisfy', cursive;
        background-color: black;
        font-size: 2rem;
    }

    .card h5 {
        color: red;
    }

    .card {
        width: 500px;
        height: 700px;
        overflow-y: auto;
    }

    ::-webkit-scrollbar {
        width: 10px;
    }

    ::-webkit-scrollbar-thumb {
        background-color: red;
        border-radius: 10px;
    }

    ::-webkit-scrollbar-track {
        background-color: #f2f2f2;
        border-radius: 10px;
    }

    .container80 {
        width: 80%;
        margin: auto;
    }
